        main._addMainTab = function(tab) {
            if (tab.closeable === undefined) {
                tab.closeable = false;
            }
            $('#mainTab').tabs('add', {
                title: tab.name,
                selected: true,
                href: tab.url,
                closable: tab.closeable,
            })
        }
        main.openMainTab = function(tab) {
            if (!($('#mainTab').tabs('getTab', tab.name))) {
                this._addMainTab(tab);
            } else {
                $('#mainTab').tabs('select', tab.name)
            }
        }
        main.setUser = function(user) {
            function getNowFormatDate() {
                var date = new Date();
                var seperator1 = "-";
                var seperator2 = ":";
                var month = date.getMonth() + 1;
                var strDate = date.getDate();
                if (month >= 1 && month <= 9) {
                    month = "0" + month;
                }
                if (strDate >= 0 && strDate <= 9) {
                    strDate = "0" + strDate;
                }
                var currentdate = date.getFullYear() + seperator1 + month + seperator1 + strDate +
                    " " + date.getHours() + seperator2 + date.getMinutes() +
                    seperator2 + date.getSeconds();
                return currentdate;
            }
            $('#mainfooter').empty().append('<b>GCT-2017     当前用户：' + user.name + '（' + user.user_role_name + '）' + getNowFormatDate() + '登录</b>');
        }

        main._builtMenuList = function(menus) {

            function _builtRoot(item) {
                return {
                    id: item.id,
                    text: item.name,
                    children: []
                };
            }

            function _builtLeaf(item) {
                return {
                    id: item.id,
                    text: item.name,
                    attributes: {
                        url: item.url
                    }
                };
            }

            let list = [];
            let tree = {};
            if (typeof menus[0].url !== 'string' || menus[0].url.trim() !== '') {
                tree = {
                    id: 0,
                    text: '菜单',
                    children: []
                }
            };

            for (item of menus) {
                if (typeof item.url === 'string' && item.url.trim() === '') {
                    if (Object.keys(tree).length === 0) {
                        tree = _builtRoot(item);
                    } else {
                        list.push(tree);
                        tree = _builtRoot(item);
                    }
                } else {
                    tree.children.push(_builtLeaf(item));
                }
            }
            if (Array.isArray(tree.children) && tree.children.length !== 0) {
                list.push(tree);
            }
            //console.log(list);
            return list;

        }

        main.setMenu = function(menus) {
            //初始化菜单
            $('#mainMenu').tree({
                data: main._builtMenuList(menus),
                onClick: function(node) {
                    //console.log(node);
                    if ($('#mainMenu').tree('isLeaf', node.target)) {
                        //打开tab
                        let tab = {};
                        tab.name = node.text;
                        tab.url = node.attributes.url;
                        tab.closeable = true;

                        if (tab.url !== '') {
                            main.openMainTab(tab);
                        } else {
                            $.messager.alert('菜单错误', tab.name + '无有效url', 'warning');
                        }

                    } else {
                        if (node.state === 'open') {
                            $('#mainMenu').tree('collapseAll', node.target)
                        } else {
                            $('#mainMenu').tree('expandAll', node.target)
                        }

                    }

                },

            });


        };
        main.setTab = function(tabs) {
            $('#mainTab').tabs({
                plain: true,
                narrow: true,
                fit: true,
                border: false,
            });
            for (let tab of tabs) {
                if (tab.url !== '') {
                    main.openMainTab(tab);
                } else {
                    $.messager.alert('初始化菜单错误', tab.name + '无有效url', 'warning');
                }
            }
        }
        main.init = function(data) {
            main.setUser(data.user);
            main.setMenu(data.menus);
            main.setTab(data.tabs);
        }


        login = {};
        login.captcha = function() {
            //console.log('setCaptcha');
            $.post('/captcha', {}, function(data) {
                // $.parseJSON(data);
                $('#captchaPIC').html(data.captcha);
            });

        };
        login.submit = function() {
            //console.log("I'm login.Submit");
            $('#loginForm').form('submit', {
                url: '/',
                success: function(data) {
                    data = $.parseJSON(data);
                    if (!data.err) {
                        main.init(data);
                        $('#loginDialog').dialog('close');
                    } else {
                        function escape2Html(str) {
                            var arrEntities = {
                                'lt': '<',
                                'gt': '>',
                                'nbsp': ' ',
                                'amp': '&',
                                'quot': '"'
                            };
                            return str.replace(/&(lt|gt|nbsp|amp|quot);/ig, function(all, t) {
                                return arrEntities[t];
                            });
                        }
                        $.messager.alert('登录错误', data.message, 'warning', function() {
                            $('#captchaPIC').html(escape2Html(data.captcha));
                            $('#loginDialog').dialog('open');
                        });
                    }

                }
            });
        }

        //dom加载后开始执行
        $(function() {
            //响应回车，提交表单
            $('#loginDialog').dialog('window').keydown(function(e) {
                if (e.key === 'Enter') {
                    login.submit();
                }
            });

            $.post('/', {}, function(data) {
                if (!data.err) {
                    main.init(data);
                    $('#loginDialog').dialog('close');
                } else {
                    $('#captchaPIC').html(data.captcha);
                    $('#loginDialog').dialog('open');
                }
            })



        })
