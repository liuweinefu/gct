    //绑定菜单按钮的键盘设置*************************************************************************
    memberRole.keydown = function(e) {
        //console.log(e);
        if (e.altKey === false) {
            return;
        }
        switch (e.key) {
            case "w":
                memberRole.import();
                break;
            case "q":
                memberRole.export();
                break;
            case "s":
                memberRole.save();
                break;
